{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node CommonJS",

	"extends": "./tsconfig.node.json",

	"compilerOptions": {
		// --------------------------------
		// transpilation
		// --------------------------------
		"moduleResolution": "node16",
		"module": "CommonJS",
		"lib": ["ES2023"],
		"target": "ES2022",

		"verbatimModuleSyntax": false,
		"esModuleInterop": true,

		// ignore node.js internal type errors
		"skipLibCheck": true,
	}
}