{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Modern Web",

	"extends": "./tsconfig.core.json",

	"compilerOptions": {
		// --------------------------------
		// transpilation
		// --------------------------------
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2022",
		"lib": [
			"ES2024",
			"DOM",
			"DOM.Iterable",
			"WebWorker"
		],

		// from svelte
		"esModuleInterop": true,
	}
}